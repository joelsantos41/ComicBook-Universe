<!DOCTYPE html>
<html>
<head>
	<title>ComicBook Universe - Contact</title>
	<link rel="stylesheet" type="text/css" href="/css/ComicBookUniverse.css">
	 <!-- Favicon fun -->
  <link rel="icon" 
      type="image/jpg" 
      href="/images/boom-comic-book-explosion.jpg">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
</head>
<body>
	<header>
	    <nav>
	      <p id="hsButton">Hide/Show</p>
	      <ul>
	      	<li><a href="ComicBookUniverse">ComicBook Universe</a></li>
	        <li>Comics</li>
	        <li>Manga</li>
	        <li>Anime</li>
	        <li>Collectibles</li>
	        <li><a href="StanLee">Stan Lee</a></li>
	        <li><a href="contact">Contact</a></li>
	      </ul>
	    </nav>
	</header>
	<h1> # Contact Us! #</h1>

	<form method="POST" action="/contact">
		<label for="subject">Subject: </label>
		<input type="text" name="subject">
		<br>
		<label for="email">Email: </label>
		<input type="email" name="email">
		<br>
		<label for="name">Name: </label>
		<input type="text" name="name">
		<br>
		<label for="body">Message body: </label>
		<textarea rows="7" cols="25" name="body"></textarea>
		<br>
		<button type="submit" value="Submit">Submit</button>
	</form>
	<script type="text/javascript">
	    $("#comicHead").click(function (event){
	        $(".comics").toggle();
	    });

	    $(".hideable").click(function (event){
	      // console.log("clicked", event, $(event.currentTarget).find("> .imgs").length);
	      // debugger;
	      $(event.currentTarget).find(" > div > .imgs").toggle();
	    });

	    $(".hideable").click(function (event){
	      // console.log("clicked", event, $(event.currentTarget).find("> .imgs").length);
	      // debugger;
	      $(event.currentTarget).find("> .imgs").toggle();
	    });
	    //Hide/show nav links
	    $("#hsButton").click(function (event){
	      $(event.currentTarget).find(" + ul").toggle();
	    });
	    
  </script>
</body>
</html>